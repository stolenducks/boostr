# Ghostty Configuration

# === Font & Readability ===
font-family = "JetBrains Mono"
font-size = 14
font-thicken = true
font-thicken-strength = 128
adjust-cell-height = 10%

# === Theme & Appearance ===
theme = dark:Catppuccin Mocha,light:Catppuccin Latte
background-opacity = 0.95
window-padding-x = 8
window-padding-y = 8
window-padding-balance = true
window-vsync = true

# === Security ===
macos-auto-secure-input = true
macos-secure-input-indication = true
confirm-close-surface = always

# === Shell Integration (enable for better UX) ===
shell-integration = zsh
shell-integration-features = cursor,sudo,title

# === Behavior ===
window-inherit-font-size = true
window-inherit-working-directory = true
abnormal-command-exit-runtime = 1000
wait-after-command = true

# === Keybindings ===
keybind = ctrl+shift+r=reload_config
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+equal=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1
keybind = ctrl+shift+zero=reset_font_size

# Quick navigation (requires shell integration)
keybind = ctrl+shift+up=jump_to_prompt:-1
keybind = ctrl+shift+down=jump_to_prompt:1

# === Command Palette ===
# Access with cmd+shift+p (customizable below)
command-palette-entry = title:Clear Scrollback,action:clear_screen
command-palette-entry = title:Reset Terminal,action:csi:0m
command-palette-entry = title:Copy Mode,action:toggle_split_zoom

# === Quick Terminal (Global Hotkey) ===
keybind = global:cmd+shift+space=toggle_quick_terminal

# === Split Management ===
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+w=close_surface
keybind = cmd+shift+left=goto_split:left
keybind = cmd+shift+right=goto_split:right
keybind = cmd+shift+up=goto_split:top
keybind = cmd+shift+down=goto_split:bottom
keybind = cmd+shift+enter=toggle_split_zoom

# === Search ===
# Note: Search is typically Cmd+F by default, no custom binding needed

# === AI Assistant (Already configured via ~/bin/ai) ===
# Usage:
#   ai "your question"        - Ask anything
#   ai clear                  - Reset conversation
#   doo "describe command"    - Generate and execute commands

# === Notification Settings ===
bell-features = system,attention,title
app-notifications = clipboard-copy,config-reload

# === macOS-Specific Tweaks ===
macos-option-as-alt = true
macos-non-native-fullscreen = visible-menu
macos-window-shadow = true
